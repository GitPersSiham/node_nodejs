{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "esnext",
    "declaration": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "lib": [
      "es6"
    ],
    "types": [
      "node",
      "typescript"
    
    ],
    "sourceMap": true,
    "baseUrl": "src",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "*": [
        "node_modules/*"
      ]
    },
    "plugins": [
      {
        "transform": "@zerollup/ts-transform-paths",
        "exclude": [
          "*"
        ]
      }
    ]
  },
  "include": [
    "src"
  ],
  "typedocOptions": {
    "mode": "modules",
    "out": "docs"
  }
}